    <!-- 警告图标 -->
    <div class="text-danger text-6xl md:text-8xl mb-6 animate-pulse-fast">
        <<i class="fa fa-exclamation-triangle" aria-hidden="true"></</i>
    </div>
    
    <!-- 主要提醒文字 -->
    <div class="text-center mb-8">
        <h1 class="text-[clamp(2rem,5vw,4rem)] font-bold text-danger mb-4 animate-shake" id="main-message">
            wjq提醒你被骗了
