                <span>保留相关证据，必要时报警处理</span>
            </li>
        </ul>
    </div>
    
    <!-- 互动按钮 -->
    <button id="alert-button" class="bg-danger hover:bg-red-700 text-white font-bold py-3 px-8 rounded-full shadow transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
        我已了解
    </button>
    
    <script>
        // 页面加载完成后添加动画效果
        document.addEventListener('DOMContentLoaded', () => {
            const mainMessage = document.getElementById('main-message');
            const alertButton = document.getElementById('alert-button');
            
            // 每隔3秒重复抖动动画
            setInterval(() => {
                mainMessage.classList.remove('animate-shake');
                // 触发重绘
                void mainMessage.offsetWidth;
                mainMessage.classList.add('animate-shake');
            }, 3000);
            
            // 按钮点击效果
            alertButton.addEventListener('click', () => {
                alertButton.textContent = "已确认提醒";
                alertButton.classList.remove('bg-danger');
                alertButton.classList.add('bg-green-600');
                
                // 显示确认信息
                const confirmation = document.createElement('p');
                confirmation.className = 'text-green-600 mt-4 text-center';
                confirmation.innerHTML = '<<i class="fa fa-check-circle mr-1"></</i> 你已确认收到提醒';
                document.body.appendChild(confirmation);
            });
        });
    </script>
